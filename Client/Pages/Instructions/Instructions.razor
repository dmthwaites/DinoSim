<h2>Instructions</h2>
<PageOne Active="@pageOneActive"/>
<PageTwo Active="@pageTwoActive"/>
<PageThree Active="@pageThreeActive"/>

<button class="btn btn-primary" @onclick="Previous">Previous</button>
<button class="btn btn-primary" @onclick="Next">Next</button>

@code {
    private int currentPage = 1;
    private int numOfPages = 3;

    private bool pageOneActive = true;
    private bool pageTwoActive = false;
    private bool pageThreeActive = false;
    
    private void Next()
    {
        if (currentPage == numOfPages) return;
        currentPage += 1;
        ChangePage();
    }
    
    private void Previous()
    {
        if (currentPage == 1) return;
        currentPage -= 1;
        ChangePage();
    }

    private void ChangePage()
    {
        switch (currentPage)
        {
            case 1:
                pageOneActive = true;
                pageTwoActive = false;
                pageThreeActive = false;
                break;
            case 2:
                pageOneActive = false;
                pageTwoActive = true;
                pageThreeActive = false;
                break;
            case 3:
                pageOneActive = false;
                pageTwoActive = false;
                pageThreeActive = true;
                break;
        }
        
        StateHasChanged();
    }
}